
* {
  background-color: transparent;

  font: "Fira Code Nerd Font 14";
}


configuration {
	modes: "drun";
}
window {
	padding: 1em;
	border:       2px;
	border-color: #FFFFFF;
	border-radius: 6px;
	background-color: #ffffff90;
	location:   west;
	width:   25%;
	/*x-offset:   30px; */
	/*height:    96.5%;*/ 
	
	x-offset:   30px;
	height:    91.8%; 
}

mainbox {
  spacing: 0px;
  children: [message,inputbar,listview];
}

element {
  background: transparent;
  children: [ element-icon, element-text ];
}
element,element-text,element-icon, button {
    cursor: pointer;
}

inputbar {
  margin: 20px 10px;
  spacing: 0.4em;
  border-radius: 4px;

  border:        1px;
  background-color: #E0E0E0A0;
  border-color: #00000050;
  children: [entry,overlay,case-indicator];
}

listview, message {
  padding: 0.5em;
  border:  0px;
  border-radius: 0px;
  background-color: transparent;

  columns: 1;
  lines:   7;
}

listview {
  border: 0px;
  spacing: 8px;
  padding: 0.5em;
  border-radius: 0px;
  background-color: transparent;
  border-color:     #ffffff20;
  scrollbar:    false;
}

element {
    border:  1px;
    border-radius: 4px;
    padding: 5px;
    border-color: #00000050;
    
	transition: 0.4;
}

element-text {
    text-color:       #000000;
    font: "Fira Code Nerd Font 13";
    padding: 5px;
}

element normal.normal {
    background-color: #F2F2F2A0;
}
element.alternate.normal {
    background-color: #F2F2F2A0;
}

element.selected.normal {
    background-color: #B2B2B2A0;
}


entry {
    placeholder: "在这里打字";
    placeholder-color: #00000080;
    border-color: transparent;
    background-color: transparent;
    border:        10px;
    text-color: #000000DD;
}
